extends ~@layouts/basic/toxin-main-layout/toxin-main-layout.pug

//- components
include ~@common.blocks/primitives/form-dropdown/form-dropdown.pug
include ~@common.blocks/primitives/form-range-slider/form-range-slider.pug
include ~@common.blocks/containers/form-checkbox-buttons/form-checkbox-buttons.pug
include ~@common.blocks/specific/pagination/pagination.pug
include ~@common.blocks/containers/form-expandable-checkbox-list/form-expandable-checkbox-list.pug
include ~@common.blocks/containers/room-card/room-card.pug

block append variables
  -
    title = 'Поиск по номерам';
    description = 'Страница поиска по номерам в макете сайта TOXIN';

block content
  .search-room-layout.content-container
    aside.search-room-layout__filter
      .search-room-layout__dates-of-stay-dropdown
        +form-dropdown('date', { heading: { h3: 'Даты пребывания в отеле' }, name: 'dates-of-stay', range: true, selectedDates: '2019-08-19, 2019-08-23', isFilter: true })
      .search-room-layout__guests-dropdown
        +form-dropdown('item-quantity', { heading: { h3: 'Гости' }, name: 'guests', placeholder: 'Сколько гостей', openingMethod: 'applied', groups: { гости: { selectionText: 'гость', textPlural: 'гостя' }, младенцы: { selectionText: 'младенец', textPlural: 'младенцев' } }, list: { взрослые: { default: 2, min: 0, max: 1 / 0, group: 'гости' }, дети: { default: 1, min: 0, max: 1 / 0, group: 'гости' }, младенцы: { default: 1, min: 0, max: 1 / 0 } }, isFilter: true })
      .search-room-layout__price-range-slider
        +form-range-slider({ name: 'price', range: { min: 341, max: 15454 }, start: [5000, 10000], heading: { h3: 'Диапазон цены' }, description: 'Стоимость за сутки пребывания в номере', isFilter: true })
      .search-room-layout__checkbox-buttons
        +form-checkbox-buttons({ heading: { h3: 'checkbox buttons' }, buttons: { 'is-smoking': { label: 'Можно курить' }, 'is-with-pets': { label: 'Можно с питомцами', checked: true }, 'is-guests': { label: 'Можно пригласить гостей (до 10 человек)', checked: true } }, isFilter: true })
      .search-room-layout__affordable-rich-checkbox-buttons
        +form-checkbox-buttons({ heading: { h3: 'Доступность' }, type: 'detailed', buttons: { 'wide-corridor': { label: 'Широкий коридор', description: 'Ширина коридоров в номере не менее 91 см.' }, 'assistant-for-the-disabled': { label: 'Помощник для инвалидов', description: 'На 1 этаже вас встретит специалист и проводит до номера.' } }, isFilter: true })
      .search-room-layout__facilities-dropdown
        +form-dropdown('item-quantity', { heading: { h3: 'Удобства номера' }, name: 'facilities', groups: { спальни: { selectionText: 'спальня', textPlural: 'спальни' }, кровати: { selectionText: 'кровать', textPlural: 'кровати' }, 'ванные комнаты': { selectionText: 'ванная комната', textPlural: 'ванные комнаты' } }, list: { спальни: { default: 2, min: 1, max: 3 }, кровати: { default: 2, min: 1, max: 3 }, 'ванные комнаты': { default: 0, min: 0, max: 2 } }, isFilter: true })
