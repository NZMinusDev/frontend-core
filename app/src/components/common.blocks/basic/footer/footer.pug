include ~@common.blocks/primitives/form-text-field/form-text-field.pug

//- type?: "creative"
//- id?: id of component
//- class?: class for component bem mix: such as positioning functionality

mixin footer
  -
    const icons = ["","",""];
    const copyright = "Copyright © 2018 Toxin отель. Все права зачищены.";
  case attributes.type
    when "creative"
      footer.footer.footer_creative.content-container(id=attributes.id, class=attributes.class)
        .footer__logo
          .logo.logo_color-gradient-primary
          span.logo__title TOXIN
        p.footer__copyright= copyright
        .footer__icons
          each icon in icons
            a.icon.icon_color-gradient-primary.footer__brand-icon(href="", data-icon=icon)
    default
      footer.footer.content-container(id=attributes.id, class=attributes.class)
        section.footer__widgets
          .footer__logo
            .logo.logo_color-gradient-primary
            span.logo__title TOXIN
          p.footer__description Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
          input#footer__navigation-checkbox.footer__list-checkbox(type="checkbox")
          label.footer__list.footer__navigation(for="footer__navigation-checkbox")
            h3 Навигация
            a(href="") О нас
            a(href="") Новости
            a(href="") Служба поддержки
            a(href="") Услуги
          input#footer__about-checkbox.footer__list-checkbox(type="checkbox")
          label.footer__list.footer__about(for="footer__about-checkbox")
            h3 О нас
            a(href="") О сервисе
            a(href="") Наша команда
            a(href="") Вакансии
            a(href="") Инвесторы
          input#footer__support-checkbox.footer__list-checkbox(type="checkbox")
          label.footer__list.footer__support(for="footer__support-checkbox")
            h3 Служба поддержки
            a(href="") Соглашения
            a(href="") Сообщества
            a(href="") Связь с нами
          input#footer__subscription-checkbox.footer__list-checkbox(type="checkbox")
          label.footer__list.footer__subscription(for="footer__subscription-checkbox")
            h3 Подписка
            p.footer__description Получайте специальные предложения и новости сервиса
            +form-text-field#subscription-text-field(
              type="email",
              name="subscription-form-text-field",
              materialIcon="arrow_forward"
            )
        section.footer__copyright-bar
          p.footer__copyright= copyright
          .footer__icons
            each icon in icons
              a.icon.icon_color-gradient-primary.footer__brand-icon(href="", data-icon=icon)
