include ~@common.blocks/primitives/form-text-field/form-text-field.pug
include ~@common.blocks/primitives/icon/icon.pug

//- 
  type?: 'creative' - type of footer
    when undefined
      action: string - action of form with subscription
      name?: string - name of form with subscription
      method?: 'get' | 'post' - method of form with subscription
  icons?: { glyph: string, title: string, href: string }[] - icons
  copyright?: string - copyright text
  Tip: mixin also uses 'and attributes'(&attributes)
mixin footer({ type = undefined, action = '/mock.js', name = 'footer-subscription', method = 'post', icons = [ { glyph: '&#xf099;', title: 'twitter', href: '/mock.html' }, { glyph: '&#xf082;', title: 'facebook', href: '/mock.html' }, { glyph: '&#xf16d;', title: 'instagram', href: '/mock.html' } ], copyright = 'Copyright © 2018 Toxin отель. Все права зачищены.' } = {})
  case type
    when 'creative'
      footer.footer.footer_type_creative&attributes(attributes)
        section.footer__logo
          .logo.logo_color_primary-gradient
          span.logo__title toxin
        p.footer__copyright= copyright
        section.footer__icons
          ul.footer__icons-list
            each icon in icons
              li.footer__icons-list-item
                +icon({ tag: 'a', fontFamily: 'branded', content: icon.glyph, width: 'medium', height: 'font', color: 'primary-gradient' })(
                  href=icon.href,
                  title=icon.title
                )
    default
      footer.footer&attributes(attributes)
        section.footer__widgets.content-container
          section.footer__logo
            .logo.logo_color_primary-gradient
            span.logo__title toxin
          p.footer__description Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
          section.footer__navigation
            input#footer-navigation-checkbox.footer__list-checkbox(type="checkbox") 
            h3.footer__list-label-heading
              label.footer__list-label(for="footer-navigation-checkbox", tabindex="0") Навигация
            ul.footer__list
              li.footer__list-item
                a.footer__link(href="/mock.html") О нас
              li.footer__list-item
                a.footer__link(href="/mock.html") Новости
              li.footer__list-item
                a.footer__link(href="/mock.html") Служба поддержки
              li.footer__list-item
                a.footer__link(href="/mock.html") Услуги
          section.footer__about-us-section
            input#footer-about-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label-heading
              label.footer__list-label(for="footer-about-checkbox", tabindex="0") О нас
            ul.footer__list
              li.footer__list-item
                a.footer__link(href="/mock.html") О сервисе
              li.footer__list-item
                a.footer__link(href="/mock.html") Наша команда
              li.footer__list-item
                a.footer__link(href="/mock.html") Вакансии
              li.footer__list-item
                a.footer__link(href="/mock.html") Инвесторы
          section.footer__support
            input#footer-support-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label-heading
              label.footer__list-label(for="footer-support-checkbox", tabindex="0") Служба поддержки
            ul.footer__list
              li.footer__list-item
                a.footer__link(href="/mock.html") Соглашения
              li.footer__list-item
                a.footer__link(href="/mock.html") Сообщества
              li.footer__list-item
                a.footer__link(href="/mock.html") Связь с нами
          section.footer__subscription
            input#footer-subscription-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label-heading
              label.footer__list-label(for="footer-subscription-checkbox", tabindex="0") Подписка
            ul.footer__list
              li.footer__list-item
                p.footer__description
                  span.footer__description-aligner Получайте специальные предложения и новости сервиса
              li.footer__list-item
                form(name=name, action=action, method=method) 
                  +form-text-field({ name: 'subscription-form-text-field', type: 'email', materialIcon: 'arrow_forward'})
        section.footer__copyright-bar.content-container
          p.footer__copyright= copyright
          .footer__icons
            ul.footer__icons-list
              each icon in icons
                li.footer__icons-list-item
                  +icon({ tag: 'a', fontFamily: 'branded', content: icon.glyph, width: 'medium',height: 'font', color: 'primary-gradient' })(
                    href=icon.href,
                    title=icon.title
                  )
