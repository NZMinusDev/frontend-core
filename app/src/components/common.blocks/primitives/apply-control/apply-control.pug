//- 
  Just wrapped apply and reset buttons
  Tip: mixin also uses 'and attributes'(&attributes)
mixin apply-control
  .apply-control.js-apply-control&attributes(attributes)
    input.apply-control__clear-btn.js-apply-control__clear-btn.apply-control__clear-btn_hidden(
      type="button",
      value="очистить"
    )
    input.apply-control__apply-btn.js-apply-control__apply-btn(type="button", value="применить")
